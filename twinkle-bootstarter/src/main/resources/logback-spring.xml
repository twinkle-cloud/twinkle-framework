<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<include resource="org/springframework/boot/logging/logback/base.xml" />
	<property name="default_pattern"
		value="[%X{userLoggerName}] %date{yyyy-MM-dd HH:mm:ss} [%thread] %-5level [%logger{30}:%line] - %msg%n" />

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>${default_pattern}</pattern>
		</encoder>
	</appender>

	<appender name="LOGSTASH"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/user-mgmt.log/</file>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>${default_pattern}</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_PATH}/logstash-user-mgmt-%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder class="net.logstash.logback.encoder.LogstashEncoder">
		</encoder>
	</appender>

	<springProfile name="test">
		<logger name="com.twinkle">
			<level value="DEBUG" />
			<appender-ref ref="LOGSTASH" />
		</logger>

		<logger name="org.springframework">
			<level value="WARN" />
		</logger>
	</springProfile>
	
	<springProfile name="development">
		<logger name="com.twinkle">
			<level value="DEBUG" />
			<appender-ref ref="LOGSTASH" />
		</logger>

		<logger name="org.springframework">
			<level value="INFO" />
		</logger>
	</springProfile>

	<springProfile name="cloud">
		<logger name="com.twinkle">
			<level value="DEBUG" />
			<appender-ref ref="LOGSTASH" />
		</logger>

		<logger name="org.springframework">
			<level value="WARN" />
		</logger>
	</springProfile>
	<root>
		<level value="DEBUG" />
		<!-- <appender-ref ref="STDOUT" /> -->
		<appender-ref ref="LOGSTASH" />
	</root>

	<logger name="com.zaxxer">
		<level value="ERROR" />
	</logger>
	<logger name="javax">
		<level value="ERROR" />
	</logger>
	<logger name="com.sun">
		<level value="ERROR" />
	</logger>
	<logger name="sun">
		<level value="ERROR" />
	</logger>
	<logger name="springfox">
		<level value="ERROR" />
	</logger>
	<logger name="net.sf.ehcache">
		<level value="ERROR" />
	</logger>

	<logger name="org.hibernate">
		<level value="ERROR" />
	</logger>

	<logger name="org.apache">
		<level value="ERROR" />
	</logger>

	<logger name="com.alibaba.dubbo">
		<level value="WARN" />
	</logger>

	<logger name="net.rubyeye.xmemcached">
		<level value="ERROR" />
	</logger>

	<logger name="com.google.code">
		<level value="ERROR" />
	</logger>

	<logger name="com.netflix">
		<level value="ERROR" />
	</logger>

	<logger name="org.dozer">
		<level value="ERROR" />
	</logger>

</configuration>
